<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <%- include('../partials/metadata') %>
    <script src="/js/entry/wishlist.js"></script>
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
</head>
<body>
<%- include('../partials/navbar') %>
<div class="container">
    <div class="tile is-ancestor">
        <div class="tile pt-5">
            <div class="tile is-parent is-vertical">
                <article class="tile is-child box">
                    <div class="columns">
                        <div class="column is-one-fifth">
                            <figure class="image is-3by4">
                                <img src="/api/games/<%= entry.gameID %>/cover">
                            </figure>
                        </div>
                        <div class="column">
                            <h1 class="title"><%= entry.title %></h1>
                            <div class="columns">
                                <div class="column">
                                    <h1 class="title is-5"><%= entry.platform %></h1>
                                    <h1 class="subtitle"><%= entry.edition %></h1>
                                </div>
                                <div class="column is-one-fifth">
                                    <figure id="rating-figure" class="image is-48x48"></figure>
                                </div>
                            </div>
                            <div id="loading-div"></div>
                            <div id="tags-div"></div>
                            <br>
                            <p id="description" class="has-text-light"></p>
                            <br>
                            <a href="<%= entry.igdbURL %>">
                                <p id="igdb-link" class="has-text-link"></p>
                            </a>
                        </div>
                    </div>
                </article>
                <div class="tile">
                    <div class="tile is-child is-vertical pr-3">
                        <article class="tile is-parent box is-vertical">
                            <h1 class="title is-4">Cost Breakdown</h1>
                            <div class="mr-3 ml-3">
                                <canvas id="cost-chart" width="350" height="100"></canvas>
                            </div>
                        </article>
                    </div>
                    <div class="tile is-child is-vertical pl-3">
                        <div class="tile is-child is-vertical">
                            <article class="tile is-parent box is-vertical">
                                <h1 class="title is-4">Manage Game</h1>
                                <div class="container">
                                    <button class="button is-success" onclick="toggleModal()">Add to Library</button>
                                    <button class="button is-info">Edit</button>
                                    <button class="button is-danger" onclick="deleteGame(<%= id %>)">Delete</button>
                                </div>
                            </article>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="add-modal" class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Add to Library</p>
            <button class="delete" aria-label="close" onclick="toggleModal()"></button>
        </header>
        <section class="modal-card-body">
            <div class="field">
                <label class="label">Date Added</label>
                <div class="control">
                    <input id="calendar-input" type="date" name="trip-start"
                           min="1970-01-01">
                </div>
            </div>

            <div class="field" onclick="dateCheck()">
                <input id="date-check" type="checkbox" onclick="dateCheck()">
                <label class="checkbox has-text-light" onclick="dateCheck()">I don't know when I bought it</label>
            </div>

            <div class="field">
                <label class="label">Cost</label>
                <div class="control">
                    <input required id="cost-text" class="input" type="number" min="0" step="any"
                           placeholder="How much did you pay for this?">
                </div>
            </div>

            <div class="field" onclick="giftCheck()">
                <input id="gift-check" type="checkbox" onclick="giftCheck()">
                <label class="checkbox has-text-light" onclick="giftCheck()">This was a gift</label>
            </div>

            <div class="field">
                <label class="label">Condition</label>
                <div class="control">
                    <div class="select">
                        <select id="condition-selection">
                            <option id="new">New</option>
                            <option id="used">Used</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="field">
                <label class="label">Items</label>
                <input id="box-check" type="checkbox">
                <label class="checkbox has-text-light">Box</label>
                <input id="manual-check" type="checkbox">
                <label class="checkbox has-text-light">Manual</label>
            </div>

            <div class="field">
                <label class="label">Retailer</label>
                <div class="control">
                    <div class="select">
                        <select id="retailer-selection" onchange="toggleRetailer()">
                            <option value="-2">Unknown</option>
                        </select>
                    </div>
                </div>
            </div>

            <div id="add-retailer-div"></div>
        </section>
        <footer class="modal-card-foot">
            <button class="button" onclick="toggleModal()">Cancel</button>
            <button class="button is-primary" onclick="submitPurchaseInfo()">Submit</button>
        </footer>
    </div>
</div>
<script>
    getIGDBInfo(<%= entry.gameID %>);
</script>
</body>
</html>
