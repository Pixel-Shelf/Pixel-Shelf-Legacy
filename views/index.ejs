<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <%- include('partials/metadata') %>
    <script src="/js/index.js"></script>
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="https://cdn.apple-mapkit.com/mk/5.x.x/mapkit.js"></script>
    <script>
        getSizeByPlatforms();
        getSize();
        getRandomPlayingGame();
        getBacklog();
        getSizeByProgress();
        getSizeByDateAdded();
    </script>
</head>
<body>
<%- include('partials/navbar') %>
<div class="is-hidden-mobile">
    <section class="hero is-medium is-primary">
        <div class="hero-body has-text-centered">
            <pixel-shelf-branding>
                <p class="title">
                    Pixel Shelf
                </p>
            </pixel-shelf-branding>
            <p class="subtitle">
                Take control of your game collection
            </p>
        </div>
    </section>
    <div class="container">
        <div class="tile is-ancestor">
            <div class="tile pt-5">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child box">
                        <h1 class="title is-4">Library Statistics</h1>
                        <h1 id="game-count-text" class="subtitle">... Games</h1>
                        <div id="tab-divs">
                            <div id="div-growth">
                                <canvas id="size-chart" width="300" height="100"></canvas>
                            </div>
                            <div id="div-platform" class="is-hidden">
                                <canvas id="platforms-chart" width="300" height="100"></canvas>
                            </div>
                            <div id="div-progress" class="is-hidden">
                                <canvas id="progress-chart" width="300" height="100"></canvas>
                            </div>
                            <div id="div-map" class="is-hidden">
                                <div id="index-map"></div>
                                <script>
                                    getPlaces();
                                </script>
                            </div>
                        </div>
                        <div class="tabs is-centered is-toggle pt-5">
                            <ul id="tabs">
                                <li id="tab-growth" class="is-active" onclick="tabToggle('growth')"><a>Library
                                        Growth</a></li>
                                <li id="tab-platform" onclick="tabToggle('platform')"><a>By Platform</a></li>
                                <li id="tab-progress" onclick="tabToggle('progress')"><a>By Progress</a></li>
                                <li id="tab-map" onclick="tabToggle('map')"><a>By Retailer</a></li>
                            </ul>
                        </div>
                    </article>
                </div>
            </div>
        </div>
        <div class="tile is-ancestor">
            <div class="tile pt-5">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child box">
                        <h1 class="title is-4">Currently Playing</h1>
                        <h1 id="currently-playing-title" class="subtitle is-5"></h1>
                        <figure class="image is-3by4">
                            <a id="currently-playing-link">
                                <img id="currently-playing-cover" src="/images/covers/placeholder.jpg">
                            </a>
                        </figure>
                    </article>
                </div>
            </div>
            <div class="tile pt-5">
                <div class="tile is-parent is-vertical">
                    <article class="tile is-child box">
                        <h1 class="title is-4">Backlog</h1>
                        <table class="table is-hoverable is-striped is-fullwidth">
                            <thead>
                            <tr>
                                <th onclick="sortBy('title')">Title</th>
                            </tr>
                            </thead>
                            <tbody id="table-body">
                            </tbody>
                        </table>
                    </article>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="is-hidden-tablet">
    <%- include('mobile/index') %>
</div>
</body>
</html>
