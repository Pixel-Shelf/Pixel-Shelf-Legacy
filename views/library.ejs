<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <script src="/js/library.js"></script>
</head>
<body>
<%- include('partials/navbar') %>
<table class="table is-hoverable is-striped is-fullwidth">
    <thead>
    <tr>
        <th onclick="sortBy('title')">Title</th>
        <th onclick="sortBy('platform')">Platform</th>
        <th onclick="sortBy('dateAdded')">Date Added</th>
        <th onclick="sortBy('cost')">Cost</th>
        <th onclick="sortBy('edition')">Edition</th>
    </tr>
    </thead>
    <tbody id="table-body">
    <% library.forEach(function(game) { %>
        <tr>
            <th><a href="/library/<%= game.id %>"><%= game.title %></a></th>
            <td><%= game.platform %></td>
            <td><%= game.dateAdded %></td>
            <td><%= game.cost %></td>
            <td><%= game.edition %></td>
        </tr>
    <% }); %>
    </tbody>
</table>
</body>
</html>
